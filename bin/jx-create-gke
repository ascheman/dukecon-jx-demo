#!/bin/bash

set -eu

dir=`dirname $0`
test "${dir}" && dir="$dir/"

source $dir/env-common.sh
source $dir/env-gke.sh

${JX} create cluster gke \
    -n ${JX_NAME} \
    -z "${JX_GKE_ZONE}" \
    -m n1-standard-4 \
    -p ${JX_GKE_PROJECT} \
    --min-num-nodes=3 \
    --max-num-nodes=5
    --skip-login=true \
    \
    "$@"
